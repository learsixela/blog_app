<div id="<%= dom_id post %>">
  <p>
    <strong>Image:</strong>
    <%= post.image %>
  </p>

  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= post.description %>
  </p>
<% if current_user.id == post.user.id %>
  <p>
    <strong>Usuario:</strong>
    <%= post.user.email %>
  </p>
<% end %>
</div>
